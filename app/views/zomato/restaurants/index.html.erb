<h1>Restaurants</h1>

<%= link_to :add_restaurant, new_zomato_restaurant_path %>

<% if @restaurants.length > 0 %>
    <% @restaurants.each do |res| %>
        <p>
            <%= "#{res[:id]}, #{res[:name]}, #{res[:status]}" %>
            <%= link_to :add_food, new_zomato_restaurant_food_path(res) %>
            <%= link_to :view_foods, zomato_restaurant_path(res) %>
        </p>
    <% end %>
<% else %>
    <p>Items not found</p>
<% end %>